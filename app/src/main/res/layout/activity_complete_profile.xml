<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".authentication.CompleteProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_profile_image"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_add_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Profile Image"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/add_id_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/idcard" />

    <TextView
        android:id="@+id/tv_add_id_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add ID card Image"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimary"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:text="Submit"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"/>


</LinearLayout>